@model ThemeFormModel

@{
    ViewBag.Title = "Create New Theme";
    Layout = "_Layout";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Create New Theme</h2>

    <div class="row justify-content-center">
        <div class="col-md-6"> 
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Theme Details</h5>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Enter theme name" required>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-controller="Theme" asp-action="AllTheme" class="btn btn-secondary ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>