@model System.Collections.Generic.List<EventManager.Models.ThemeViewModel>

@{
    ViewBag.Title = "Manage Themes";
    Layout = "_Layout";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Manage Event Themes</h2>
    <div class="text-end mb-4">
        <a class="btn btn-primary" asp-action="Create">New Theme</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6"> 
            <ul class="list-group">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var t = Model[i];
                    var bgColorClass = i % 2 == 0 ? "bg-blue-gray" : ""; 
                    <li class="list-group-item d-flex justify-content-between align-items-center @bgColorClass">
                        @t.Name
                        <div>
                            <a class="btn btn-warning btn-sm me-2" asp-action="Update" asp-route-id="@t.Id">Update</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@t.Id">Delete</a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>