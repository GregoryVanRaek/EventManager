@model EventFormModel

<!DOCTYPE html>

<html>
<head>
    <title>Update</title>
</head>
<body>

<h1>Update your event</h1>

<form method="POST">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start date</label>
        <input asp-for="StartDate" type="date" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End date</label>
        <input asp-for="EndDate" type="date" class="form-control">
    </div>

    <div class="form-group">
        <h3>Address</h3>
        <div class="form-group">
            <label asp-for="Address_Street">Street</label>
            <input asp-for="Address_Street" type="text" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Address_Number">N°</label>
            <input asp-for="Address_Number" type="number" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Address_Zip">Zip Code</label>
            <input asp-for="Address_Zip" type="text" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Address_City">City</label>
            <input asp-for="Address_City" type="text" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Address_Country">Country</label>
            <input asp-for="Address_Country" type="text" class="form-control">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

</body>
</html>